{% extends 'base.html.twig' %}

{% block head %}

    <script src="https://kit.fontawesome.com/6d20788c52.js" crossorigin="anonymous"></script>
{% block title %}Home Page!{% endblock %}


<style>
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    overflow-x: hidden;
}

.logo {
    font-size: 1.6rem;
    font-family: 'Poppins', sans-serif;
}


ul li {
    list-style: none;
}

header a {
    text-decoration: none;
    color: #000;
    font-size: 1.4em;
    padding: 5px 10px;
    border-radius: 5px;
    transition: .2s;
}

header a:hover{
    background-color: #0066ff;
    color: #fff;
}

.active a{
    background-color: #0066ff;
    color: #fff;
}

header {
    position: fixed;
    top: 0;
    height: auto;
    z-index: 999;
    width: 100vw;
    background-color: #fff;
    /* box-shadow: 0 0 10px rgba(0, 0, 0, .5); */
    padding: 20px 0;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

header ul {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    width: 45%;
}

.nav-btn {
    width: 20%;
}

main {
    min-height: 100vh;
    height: auto;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    background-color: rgba(246, 249, 252, 0.8);
}

.block {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: auto;
    width: 50%;
}

h1 {
    font-family: 'Prompt', sans-serif;
    font-size: 3em;
    margin-bottom: 3%;
    text-shadow: 0 0 5px #fff;
}

h2 {
    text-shadow: 0 0 5px #fff;
    font-family: 'Prompt', sans-serif;
    font-size: 2em;

}

.blob {
    position: absolute;
    top: 0;
    left: 0;
    fill: #6ba9ff;
    width: 30vmax;
    z-index: -1;
    animation: move 10s ease-in-out infinite;
    transform-origin: 50% 50%;
}

@keyframes move {
    0% {
        transform: scale(1) translate(10px, -30px);
    }

    38% {
        transform: scale(0.8, 1) translate(80vw, 30vh) rotate(160deg);
    }

    40% {
        transform: scale(0.8, 1) translate(80vw, 30vh) rotate(160deg);
    }

    78% {
        transform: scale(1.3) translate(0vw, 50vh) rotate(-20deg);
    }

    80% {
        transform: scale(1.3) translate(0vw, 50vh) rotate(-20deg);
    }

    100% {
        transform: scale(1) translate(10px, -30px);
    }
}

main p {
    font-family: 'Prompt', sans-serif;
    font-size: 1.2em;
    text-align: center;
    margin-bottom: 3%;
}

.btn {
    font-family: 'Prompt', sans-serif;
    font-size: 1.2em;
    text-align: center;
    background-color: #0066ff;
    color: #fff;
    padding: 15px 30px;
    border-radius: 15px;
    box-shadow: 0 0 15px #000;
    cursor: pointer;
}

.btn:hover {
    background-color: rgba(0, 102, 255,.8);
    box-shadow: 0 0 15px #0066ff;
    transition: .5S ease;
}




/* SERVICES START */



#services {
    min-height: 100vh;
    background-color: #e4efff;
}

#services>h2,
#outcome>h2,
#testimonial h2 {
    text-align: center;
    padding-top: 50px;
    padding-bottom: 30px;
    font-size: 2.5em;
}

.flex {
    display: flex;
    flex-wrap: wrap;
}

.service {
    width: 20%;
    min-height: 250px;
    text-align: center;
    margin: 2%;
    box-shadow: 0 0 10px rgba(0, 0, 0, .2);
    padding: 1%;
    border-radius: 15px;
    background-color: #fff;
    margin-top: .5%;
    margin-bottom: 1%;
}

.service:hover {
    background-color: #f6f9fccc;
    transition: .5s;
    box-shadow: 0 0 10px rgba(0, 0, 0, .5);
}


p {
    font-family: 'Prompt', sans-serif;
    font-size: 1.2em;
    text-align: justify;
    margin-bottom: 3%;
    padding: 25px;
}


.head {
    font-size: 1.8em;
    font-weight: 600;
    text-align: center;
}

.service i {
    display: block;
    font-size: 2.2em;
    margin-bottom: 10px;
}


#services .btn {
    width: 20%;
    margin-left: 40%;
    margin-bottom: 30px;
    margin-top: 30px;
}




/* OUTCOME */



#outcome {
    background-color: #f6f9fccc;
    padding: 5%;
    padding-top: 0;
    min-height: 100vh;
    height: auto;
}

#outcome .block {
    display: flex;
    flex-direction: row;
    width: 45%;
    height: 350px;
    background-color: #a3c4f1;
    margin: 1%;
    box-shadow: 0 0 10px rgba(0, 0, 0, .2);
    border-radius: 20px;
}

#outcome .block:hover {
    background-color: #c0daff;
    box-shadow: 0 0 10px rgba(0, 0, 0, .5);
    transition: .5s;
}

#outcome img,
.text {
    width: 50%;
}

.text h2 {
    text-align: center;
}



#testimonials {
    min-height: 45vh;
    height: auto;
    background-color: #e4efff;
}

#testimonials h2 ,#customers h2{
    text-align: center;
    padding-top: 50px;
    padding-bottom: 30px;
    font-size: 2.5em;
}

.flex-testimonial{
    display: flex;
    flex-direction: row;
    overflow: hidden;
    height: 35vh ;
}

.testimonial{
    width: 30%;
    height: 300px;
    background-color: #a3c4f1;
    margin: 1.75%;
    border-radius: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, .2);
    transition: .5s;
    animation: testimonial 15s ease infinite;
}

/* animation testimonial */

@keyframes testimonial {
    0% {
        transform: translateX(80%);
    }
    100% {
        transform: translateX(-80%);
    }
}


#customers{
    min-height: 55vh;
    height: auto;
    background-color: #e4efff;

}

.flex-customers{
    display: flex;
    flex-direction: row;
}

#customers img{
    width: 100%;
}
.customer{
    width: 8%;
    margin-left: 2%;
}

</style>

{% end block %}

